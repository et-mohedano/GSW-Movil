<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/txtTituloRadio"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:text="Materias de ITI (uso de RadioButton)" />

        <RadioGroup
            android:id="@+id/rbgMaterias"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTituloRadio"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="19dp">

            <RadioButton
                android:id="@+id/rbtMateria1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioCheck"
                android:text="Programación Móvil" />

            <RadioButton
                android:id="@+id/rbtMateria2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioCheck"
                android:text="Programación Orientada a Objetos" />

            <RadioButton
                android:id="@+id/rbtMateria3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioCheck"
                android:text="Fundamentos de Programación" />

            <RadioButton
                android:id="@+id/rbtMateria4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioCheck"
                android:text="Programación Estructurada" />

            <RadioButton
                android:id="@+id/rbtMateria5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioCheck"
                android:text="Estructura de Datos" />
        </RadioGroup>

        <Button
            android:id="@+id/btnAnteriorRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTituloRadio"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="292dp"
            android:onClick="anterior"
            android:text="Anterior" />

        <Button
            android:id="@+id/btnSiguienteRadio"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTituloRadio"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_toEndOf="@+id/btnAnteriorRadio"
            android:layout_toRightOf="@+id/btnAnteriorRadio"
            android:onClick="siguiente"
            android:text="Siguiente" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>